{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", 
    "paths": {
      "@configs/*": ["configs/*"], 
      "@components/*": ["components/*"], 
      "@/*": ["./*"] 
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx", 
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.jsx",
    "app/_layout.jsx",
    "app/(auth)/_layout.jsx",
    "app/(auth)/sign-up.jsx",
    "app/(auth)/sign-in.jsx"
  ]
}